{
  "name": "uxpin-code",
  "version": "1.0.0",
  "description": "Command-line tool integrating Design System repository with http://code.uxpin.com",
  "main": "dist/index.js",
  "bin": "bin/uxpin-code",
  "author": "UXPin Inc.",
  "license": "MIT",
  "keywords": [
    "UXPin",
    "design system",
    "command-line",
    "style guide",
    "UI components"
  ],
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "test/tsconfig.json"
      }
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.ts"
    ],
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@shopify/polaris": "https://github.com/Shopify/polaris.git",
    "@types/jest": "^20.0.8",
    "@types/lodash": "^4.14.74",
    "@types/node": "^8.0.26",
    "@types/webpack": "^3.0.10",
    "arui-feather": "https://github.com/alfa-laboratory/arui-feather.git",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "child-process-promise": "^2.2.1",
    "codecov": "^2.3.0",
    "jest": "^21.0.1",
    "jest-junit-reporter": "^1.1.0",
    "nordnet-ui-kit": "https://github.com/nordnet/nordnet-ui-kit.git",
    "nyc": "^11.2.1",
    "ts-jest": "^21.0.0",
    "tslint": "^5.7.0",
    "tslint-config-uxpin": "latest",
    "typescript": "^2.5.2"
  },
  "dependencies": {
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "lodash": "^4.17.4",
    "webpack": "^3.5.6"
  }
}
